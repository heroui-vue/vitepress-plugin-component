{
  "name": "vitepress-plugin-component",
  "version": "1.0.0-beta.1",
  "description": "VitePress plugin that renders Vue components with tabs showing preview and source code",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./client": "./src/client/index.ts"
  },
  "files": [
    "dist",
    "src/client"
  ],
  "types": "index.d.ts",
  "scripts": {
    "dev": "tsdown -w",
    "build": "tsdown --minify",
    "bump": "bumpp --sign",
    "pub": "npm run build && npm publish --registry=https://registry.npmjs.org/",
    "dev:docs": "pnpm -C playground dev"
  },
  "keywords": [
    "vitepress",
    "plugin",
    "vue",
    "component",
    "tabs"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": "hotdogc1017@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextui-vue/vitepress-plugin-component"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-container": "^2.0.10",
    "@types/node": "^22.17.0",
    "bumpp": "^10.1.0",
    "markdown-it-container": "^4.0.0",
    "tsdown": "latest",
    "typescript": "^5.8.3",
    "unplugin-vue": "^6.2.0",
    "vitepress": "latest",
    "vue": "^3.5.0"
  }
}
